// CallMethod - call from client
func CallMethod(methodName string, args []byte, callback goapi.FuncCallback) {
	registry.Call(methodName, args, callback)
}

func RegisterEventCallback(onEvent goapi.Event) {
	registry.RegisterEventCallback(onEvent)
}

func RemoveEventCallback() {
	registry.RegisterEventCallback(nil)
}

// Subscribe - Subscribe from client
func Subscribe(subscriptionName string, args []byte) {
	registry.Subscribe(subscriptionName, args)
}

// Unsubscribe - Unsubscribe from client
func Unsubscribe(subscriptionName string, args []byte) {
	registry.CancelSubscription(subscriptionName, args)
}
